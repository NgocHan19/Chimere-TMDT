@model LoginViewModel
@{
    ViewData["Title"] = "Login User";
}
<section id="login-section" class="d-flex justify-content-center align-items-center min-vh-100">
    <!--form-->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <!--login form-->
                    <h2 class="text-center mb-4">Forget Password</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="SendEmailForgotPassword" asp-controller="Account">
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input asp-for="Email" id="email" class="form-control p-2" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div class="d-grid mb-3">
                            <button class="btn btn-primary">Send</button>
                        </div>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-QY6sqtrORtkgnbUMYpSvpo4YdjtU06LjxCsqEpsoP5Ea1lv4EcHA2VF5p8BEsI1u" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}