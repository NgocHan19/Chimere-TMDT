@{
    Layout = null; // Nếu không dùng layout chung
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <!-- Liên kết file login.css -->
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="form-group">
                <input type="text" name="Username" placeholder="Enter Email*" required />
            </div>
            <div class="form-group">
                <input type="password" name="Password" placeholder="Enter Password" required />
            </div>
            <p>By Continuing, I agree to the <a href="#">Terms of Use</a> & <a href="#">Privacy Policy</a></p>
            <button type="submit">CONTINUE</button>
            <p>Don't have an account? <a href="#">Sign up here</a></p>
            <p>Having trouble logging in? <a href="#">Get help</a></p>
        </form>
    </div>
</body>
</html>