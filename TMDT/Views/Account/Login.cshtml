@using TMDT.Models.ViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Login User";
}

<link rel="stylesheet" href="~/css/login.css">

<div id="login-modal" class="modal-overlay">
    <section class="login-container">
        <div class="login-box">
            <img src="/images/close.png" id="close-btn" class="close-btn" alt="Close">
            <h2>Login</h2>
            <button class="google-login">
                <img src="/images/g+.png" alt="Google+" class="google-icon" />
                Sign In With Google+
            </button>
            <div class="divider">
                <span class="li-ne"></span>
                <span class="or-text">Or</span>
                <span class="li-ne"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Login" asp-controller="Account" class="login-form">
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Enter Email*" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group password-group">
                    <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="forgot-password">Forgot Password?</a>
                </div>
                <p class="terms">By Continuing, I agree to the <a href="#">Terms of Use</a> & <a href="#">Privacy Policy</a></p>
                <button type="submit" class="btn btn-login">Continue</button>
            </form>
            <p class="signup">Don't have an account? <a asp-action="Create" asp-controller="Account">Sign up here</a></p>
            <p class="help">Having trouble logging in? <a href="#">Get help</a></p>
        </div>
    </section>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            document.getElementById("close-btn").addEventListener("click", function () {
                document.getElementById("login-modal").style.display = "none";
            });
        </script>
    }
}
